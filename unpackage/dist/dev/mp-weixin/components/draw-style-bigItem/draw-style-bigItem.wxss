.item-active {
  position: relative;
  border-left: 2px solid blue;
  border-right: 2px solid purple;
}
.item-active::before,
.item-active::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
}
.item-active::before {
  top: 0;
  background: linear-gradient(to right, blue, purple);
}
.item-active::after {
  bottom: 0;
  background: linear-gradient(to right, blue, purple);
}
.item-active .item-inner {
  border: 2px solid;
  border-color: blue purple blue purple;
}
